@model List<ECinema.Web.Models.Domain.Tickets>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Tickets" asp-action="Create">Add new Movie</a>
    </div>

    @for(int i=0; i<Model.Count; i++)
    {
        var item = Model[i];
        if (i%3==0)
        {
            @:<div class="row">
        }

        <div class="col md-3 m-4">
            <div class="card" style="width: 18rem; height:50rem">
                <img class="card-img-top" src="@item.MovieImage" alt="Image for movie!"/>

                <div class="card-body">
                    <h5 class="card-title">@item.MovieName</h5>
                    <p class="card-text">@item.MovieDescription</p>
                    <p class="card-text">@item.Rating</p>
                    <p> <i>Price: </i><b>@item.TicketPrice</b></p>
                    </div>

                    <div class="card-footer">
                        
                        <a asp-controller="Tickets" asp-action="AddToCart" class="btn btn-info">Add to Cart</a>
                        <a asp-controller="Tickets" asp-action="Edit" class="btn btn-secondary">Edit</a>
                        <a asp-controller="Tickets" asp-action="Delete" class="btn btn-primary">Delete</a>
                        </div>
                </div>
            </div>

          
         if (i%3==2)
        {
            @:</div>
        }
    }
</div>